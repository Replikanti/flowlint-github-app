upstream flowlint_api {
    # Use 127.0.0.1:8080 for the dev compose file, 127.0.0.1:18080 for production.
    server 127.0.0.1:18080 fail_timeout=5s;
}

server {
    listen 80;
    server_name flowlint.example.com;

    # Redirect all HTTP traffic to HTTPS.
    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl http2;
    server_name flowlint.example.com;

    ssl_certificate /etc/letsencrypt/live/flowlint.example.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/flowlint.example.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
        proxy_pass http://flowlint_api;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 60s;
    }
}
