# API basics
PORT=8080
WEBHOOK_SECRET=replace_me

# Trust proxy configuration (REQUIRED for production behind reverse proxy)
# Set to 'true' to trust all proxies
# Set to '1' to trust first proxy hop
# Set to IP/CIDR for specific proxies (e.g., '127.0.0.1, 10.0.0.0/8')
# Set to 'false' for local development without proxy (default)
TRUST_PROXY=false

# GitHub App credentials
APP_ID=0
APP_PRIVATE_KEY_PEM_BASE64=base64_pkcs8_private_key

# Queue + storage
REDIS_URL=redis://flowlint-redis:6379
DATABASE_URL=postgresql://flowlint:flowlint@localhost:5432/flowlint

# Check Run branding
CHECK_NAME=FlowLint
CHECK_TITLE=FlowLint findings

# OpenTelemetry Configuration (Optional)
# OTEL_SDK_DISABLED=false
# OTEL_SERVICE_NAME=flowlint-api
# OTEL_EXPORTER=otlp-http
# OTEL_EXPORTER_OTLP_ENDPOINT=http://tempo:4318/v1/traces
# OTEL_TRACES_SAMPLER=parentbased_traceidratio
# OTEL_TRACES_SAMPLER_ARG=0.1
